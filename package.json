{
  "name": "me",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "client": "yarn --cwd=client",
    "server": "yarn --cwd=server",
    "build": "concurrently -c blue,yellow yarn:build:*",
    "build:client": "yarn client build",
    "build:server": "yarn server build",
    "dev": "concurrently -k -c blue,yellow yarn:dev:*",
    "dev:client": "yarn client dev",
    "dev:server": "yarn server dev",
    "start": "concurrently -k -c blue,yellow yarn:start:*",
    "start:client": "yarn client start",
    "start:server": "yarn server start",
    "codegen": "graphql-codegen --config utils/codegen.config.ts",
    "postcodegen": "rimraf client/types/{fragment-masking.ts,index.ts,gql.ts}",
    "prisma:generate": "prisma generate --schema utils/prisma/schema.prisma",
    "format:check": "prettier -cu .",
    "format": "prettier -wu .",
    "lint:check": "eslint .",
    "lint": "eslint --fix .",
    "typecheck": "tsc --noEmit && yarn server tsc --noEmit && yarn client tsc --noEmit",
    "postinstall": "yarn prisma:generate && yarn codegen"
  },
  "devDependencies": {
    "@babel/core": "7.20.7",
    "@graphql-codegen/cli": "2.16.2",
    "@graphql-codegen/client-preset": "1.2.4",
    "@graphql-codegen/typescript": "2.8.6",
    "@graphql-codegen/typescript-resolvers": "2.7.11",
    "@next/eslint-plugin-next": "13.1.1",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "5.47.1",
    "@typescript-eslint/parser": "5.47.1",
    "concurrently": "7.6.0",
    "eslint": "8.30.0",
    "eslint-config-next": "13.1.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard-with-typescript": "24.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "graphql": "16.6.0",
    "prettier": "2.8.1",
    "prisma": "4.8.0",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=16"
  }
}
